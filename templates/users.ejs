<html>
<head>
    <style>
        body {
            margin: 0;
            background: #f0f0f0;
            display: flex;
            height: 100vh;
            justify-content: center;
            align-items: center;
        }

        section {
            background: #1f1f1f;
            padding: 30px;
            width: 600px;
            height: 80%;
            position: relative;
        }

        h1, h2, p, li {
            font-family: Arial;
            color: white;
            text-align: center;
        }

        ul {
            margin: 0;
            padding: 0;
            position: absolute;
            left: 0;
            bottom: 30px;
            top: 300px;
            overflow-y: scroll;
            width:100%;
        }

        li {
            list-style: none;
            padding: 5px;
        }
    </style>
</head>
<body>
    <section>
        <h1>42 Events - Get participants list</h1>
        <hr><br>

        <h2>Liste des utilisateurs pour l'event <br> <%= event.name %> - <%= event.date %></h2>
    
        <p><%= users.length %> participants</p>
        <ul>
            <% users.forEach(function(user){ %>
                <li><%= user.login %></li>
            <% }); %>
        </ul>
    </section>
</body>
</html>